@model IEnumerable<PImage.Category.DTO.Category>

@{
    ViewBag.Title = "Índice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Índice</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Slug)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Slug)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { style = "text-decoration:underline" }) |
            @Html.ActionLink("Detalhes", "Details", new { id = item.Id }, new { style = "text-decoration:underline" }) |
            @Html.ActionLink("Excluir", "Delete", new { id = item.Id }, new { style = "text-decoration:underline" })
        </td>
    </tr>
}
</table>
<p>
    @Html.ActionLink("Novo", "Create", "Categories", new { style = "text-decoration:underline" })
</p>
